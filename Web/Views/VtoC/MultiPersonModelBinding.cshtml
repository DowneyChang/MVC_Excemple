
@{
    ViewBag.Title = "MultiPersonModelBinding";
}

<h2>Multi Person Model Binding</h2>
<div>
    @using (Html.BeginForm())
    {
        <p>男生：</p>
        <p>
            姓名：<input type="text" name="man.name" />
            <br />
            年齡：<input type="number" name="man.age" />
        </p>
        <p>女生：</p>
        <p>
            姓名：<input type="text" name="woman.name" />
            <br />
            年齡：<input type="number" name="woman.age" />
        </p>
        <br />
        <input type="submit" value="送出" />
    }
</div>
<hr />
<div>
    <p>男生資訊：</p>
    <p>男生姓名：@Model[0].Name</p>
    <p>男生年齡：@Model[0].Age</p>
</div>
<br />
<div>
    <p>女生資訊：</p>
    <p>女生姓名：@Model[1].Name</p>
    <p>女生年齡：@Model[1].Age</p>
</div>